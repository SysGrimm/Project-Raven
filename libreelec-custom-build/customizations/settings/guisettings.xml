<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!-- Custom Kodi Configuration for Project Raven -->
<settings version="2">
    <!-- Appearance -->
    <category id="lookandfeel">
        <group id="1">
            <setting id="lookandfeel.skin" value="skin.aeon.nox.silvo" />
            <setting id="lookandfeel.skincolors" value="skin.aeon.nox.silvo" />
            <setting id="lookandfeel.skintheme" value="SKINDEFAULT" />
            <setting id="lookandfeel.font" value="Default" />
            <setting id="lookandfeel.skinzoom" value="0" />
        </group>
    </category>

    <!-- Network -->
    <category id="network">
        <group id="1">
            <setting id="network.usehttpproxy" value="false" />
            <setting id="network.httpproxytype" value="0" />
            <setting id="services.webserver" value="true" />
            <setting id="services.webserverport" value="8080" />
            <setting id="services.webserverusername" value="" />
            <setting id="services.webserverpassword" value="" />
            <setting id="services.webserverssl" value="false" />
            <setting id="services.zeroconf" value="true" />
        </group>
    </category>

    <!-- Services -->
    <category id="services">
        <group id="1">
            <setting id="services.samba" value="true" />
            <setting id="services.ssh" value="true" />
            <setting id="services.sshport" value="22" />
            <setting id="services.sshpassword" value="libreelec" />
        </group>
    </category>

    <!-- System -->
    <category id="system">
        <group id="1">
            <setting id="system.playlistspath" value="special://profile/playlists/" />
            <setting id="system.longdateformat" value="DDDD, MMMM D YYYY" />
            <setting id="system.shortdateformat" value="DD/MM/YYYY" />
            <setting id="system.timeformat" value="HH:mm:ss" />
            <setting id="system.time12hour" value="false" />
            <setting id="system.tempunit" value="C" />
        </group>
    </category>

    <!-- Video -->
    <category id="videoplayer">
        <group id="1">
            <setting id="videoplayer.useamcodec" value="false" />
            <setting id="videoplayer.usemediacodec" value="false" />
            <setting id="videoplayer.useomxplayer" value="false" />
            <setting id="videoplayer.usevdpau" value="false" />
            <setting id="videoplayer.usevda" value="false" />
            <setting id="videoplayer.adjustrefreshrate" value="0" />
            <setting id="videoplayer.pauseafterrefreshchange" value="0.1" />
        </group>
    </category>

    <!-- Audio -->
    <category id="audiooutput">
        <group id="1">
            <setting id="audiooutput.audiodevice" value="ALSA:hdmi:CARD=b1,DEV=0" />
            <setting id="audiooutput.channels" value="1" />
            <setting id="audiooutput.config" value="2" />
            <setting id="audiooutput.samplerate" value="48000" />
            <setting id="audiooutput.passthrough" value="true" />
            <setting id="audiooutput.passthroughdevice" value="ALSA:hdmi:CARD=b1,DEV=0" />
        </group>
    </category>

    <!-- Input -->
    <category id="input">
        <group id="1">
            <setting id="input.peripherals" value="true" />
            <setting id="input.enablemouse" value="true" />
            <setting id="input.enablejoystick" value="true" />
        </group>
    </category>

    <!-- CEC -->
    <category id="cec">
        <group id="1">
            <setting id="cec.enabled" value="true" />
            <setting id="cec.useavreceiver" value="false" />
            <setting id="cec.devicename" value="LibreELEC" />
            <setting id="cec.wakescreensaver" value="true" />
            <setting id="cec.standbyonsleep" value="true" />
            <setting id="cec.shutdownonstandby" value="false" />
            <setting id="cec.sendtxinactivesource" value="true" />
        </group>
    </category>

    <!-- Project Raven Specific -->
    <category id="custom">
        <group id="1">
            <setting id="general.settinglevel" value="1" />  <!-- Standard level -->
            <setting id="filelists.showparentdiritems" value="true" />
            <setting id="filelists.showextensions" value="true" />
            <setting id="filelists.showunwatchedplots" value="true" />
            <setting id="myvideos.flatten" value="false" />
            <setting id="mymusic.startwindow" value="10502" />
            <setting id="myvideos.startwindow" value="10025" />
        </group>
    </category>
</settings>
