<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.raven.setup"
       name="Project-Raven Setup Wizard"
       version="1.0.0"
       provider-name="SysGrimm">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.28.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Project-Raven Initial Setup Wizard</summary>
    <description lang="en_GB">Configure Jellyfin server, Tailscale VPN, and other Project-Raven components during first boot.</description>
    <disclaimer lang="en_GB">This add-on configures network services and requires internet connectivity.</disclaimer>
    <language>en</language>
    <license>GPL-2.0-or-later</license>
    <forum>https://github.com/SysGrimm/Project-Raven/discussions</forum>
    <website>https://github.com/SysGrimm/Project-Raven</website>
    <source>https://github.com/SysGrimm/Project-Raven</source>
    <news>
v1.0.0
- Initial release
- Jellyfin server configuration
- Tailscale VPN setup with auth key
- Copacetic theme activation
- Automated first-run setup
    </news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
